
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to the 'sessions' collection
    // for real-time synchronization in Assist Mode.
    // In a production app, you would likely want to restrict this
    // to authenticated users who own the session.
    match /sessions/{sessionId} {
      allow read, write: if true;
    }
  }
}
